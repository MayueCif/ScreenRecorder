<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:local="clr-namespace:ScreenRecorder" x:Class="ScreenRecorder.ScreenRecorderPage">
    <ContentPage.Padding>
        <OnPlatform x:TypeArguments="Thickness">
            <On Platform="Android" Value="0,0,0,0"/>
            <On Platform="iOS" Value="0,20,0,0"/>
        </OnPlatform>
    </ContentPage.Padding>
    <StackLayout>
        <Button Text="开始" Clicked="Start"/>
        <Button Text="结束" Clicked="Stop"/>
    </StackLayout>
</ContentPage>
